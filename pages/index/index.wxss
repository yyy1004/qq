.wrapper {
	width: 100%;
	height: 100%;
	color: #555555;
}

.wrapper .top {
	height: 250rpx;
}

.wrapper .top .banner {
	height: 100%;
	background: url(https://qzonestyle.gtimg.cn/qzone/qzact/act/external/isco/banner.png);
	background-size: cover;
}
	.banner .swiper {
		width: 100%;
		height: 100%;
		color: #ffffff;
	}

	.banner .swiper .swiper-item .statistics {
		height: 150rpx;
		padding: 50rpx;
		display: flex;
		flex-direction: column;
	}
		.statistics .month {
			flex: 1 1 auto;
			align-self: center;
			font-size: 48rpx;
		}

		.statistics .count {
			flex: 1 1 auto;
			align-self: center;
			font-size: 64rpx;
		}

.wrapper .scroll-view {
	width: 100%;
}

.wrapper .edit {
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
}

.edit .textarea {
	position: fixed;
	width: 450rpx;
	height: 300rpx;
	left: 50%;
	top: 50%;
	margin-top: -190rpx;
	margin-left: -265rpx;
	border: 1px solid #efc3b7;
	background-color: #ffffff;
	padding: 40rpx;
}

.wrapper .button {
	position: fixed;
	right: 40rpx;
	bottom: 40rpx;
	width: 48px;
	height: 48px;
	background: url(https://qzonestyle.gtimg.cn/qzone/qzact/act/external/isco/button.png);
}

	.button::after{ 
		border: none; 
	}

.diary {
	padding: 40rpx 0;
}

.diary .hd {
	background: url(https://qzonestyle.gtimg.cn/qzone/qzact/act/external/isco/line.png) repeat-x 0 46%;
}
.diary .hd .date {
	padding: 2rpx 20rpx;
	background-color: #ffffff;
	border: 2px solid #efc3b7;
	border-left: none;
}

.diary .bd .photos {
	display: flex;
	flex-wrap: wrap;
	justify-content: flex-start;
	margin: 40rpx;
}

.diary .bd .photos .photo {
	width: 200rpx;
	height: 200rpx;
	margin: 10rpx;
}

.diary .bd .note {
	margin: 20rpx 50rpx;
	padding: 20rpx;
	background-color: #fff3f0;
}